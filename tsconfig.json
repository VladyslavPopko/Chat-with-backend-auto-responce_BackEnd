{
	"compilerOptions": {
		"target": "ES2021",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["ES2021"],
		"module": "commonjs",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
